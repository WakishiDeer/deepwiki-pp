{
  "name": "deepwiki-plus-plus",
  "author": "wakishi",
  "description": "Enhanced browsing tool for DeepWiki",
  "private": true,
  "version": "0.2.3",
  "type": "module",
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "build": "npm run prebuild && wxt build",
    "build:firefox": "npm run prebuild && wxt build -b firefox",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip -b firefox",
    "compile": "tsc --noEmit",
    "dependency-graph": "depcruise --config .dependency-cruiser.cjs --output-type dot . > dependency-graph.dot && (dot -Tsvg dependency-graph.dot -o dependency-graph.svg || echo \"Graphviz not found, dot file created\")",
    "dependency-graph:html": "depcruise --config .dependency-cruiser.cjs --output-type html . > dependency-graph.html",
    "prebuild": "npm run compile && npm run dependency-graph:html",
    "postinstall": "wxt prepare",
    "test": "jest"
  },
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.285",
    "@types/jest": "^29.5.12",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.3",
    "@wxt-dev/auto-icons": "^1.0.2",
    "@wxt-dev/module-react": "^1.1.3",
    "dependency-cruiser": "^16.10.4",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.8.3",
    "wxt": "^0.20.6"
  }
}
